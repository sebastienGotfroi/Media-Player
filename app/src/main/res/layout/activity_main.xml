<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/playerActivityMainView"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sebaroundtheworld.mediaplayer.View.Activity.PlayerFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_player_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:text="Hello World!"
        android:src="@drawable/headphone"/>

    <TextView
        android:id="@+id/titleTV"
        android:textSize="20sp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:text="Titre"/>

    <TextView
        android:id="@+id/singerTV"
        android:textSize="18sp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:text="Artiste"/>

    <View
        android:id="@+id/playerActivityControllerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>




</LinearLayout>