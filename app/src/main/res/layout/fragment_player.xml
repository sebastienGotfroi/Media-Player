<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/playerActivityMainView"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sebaroundtheworld.mediaplayer.View.Activity.PlayerFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_player_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green">

        <ImageView
            android:id="@+id/fragment_player_toolbar_pause"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_pause_24px"
            android:layout_gravity="right"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/fragment_player_toolbar_play"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_play_arrow_24px"
            android:layout_gravity="right"
            android:visibility="gone"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:text="Hello World!"
        android:layout_margin="30dp"
        android:src="@drawable/headphone"/>

    <TextView
        android:id="@+id/titleTV"
        android:textSize="20sp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:text="Titre"/>

    <TextView
        android:id="@+id/singerTV"
        android:textSize="18sp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:text="Artiste"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <SeekBar
            android:id="@+id/fragment_player_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fragment_player_shuffle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_shuffle_24px"/>

            <ImageView
                android:id="@+id/fragment_player_green_shuffle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_shuffle_green_24dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/fragment_player_prev"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_previous_24px"/>

            <ImageView
                android:id="@+id/fragment_player_play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/ic_play_arrow_green_24px"/>

            <ImageView
                android:id="@+id/fragment_player_pause"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/ic_pause_24px"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/fragment_player_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_next_24px"/>

            <ImageView
                android:id="@+id/fragment_player_repeat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_repeat_24px"/>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>